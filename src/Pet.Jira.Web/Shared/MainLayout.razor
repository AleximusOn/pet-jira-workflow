@inherits LayoutComponentBase
@using Pet.Jira.Infrastructure.Jira
@inject IJiraService _jiraService

<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Style="height: 100vh">
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h5" Class="ml-3">Jira workflow</MudText>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/tolmachev-pravo/Pet.Jira" Target="_blank" />
        <!--<MudSwitch @bind-Checked="@_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="Toggle Light/Dark Mode" />-->
        <MudSpacer></MudSpacer>
        <AuthorizeView>
            <Authorized>
                <MudAvatar Size="Size.Small" Color="Color.Primary" Image="@avatar">
                    <MudIcon Icon="@Icons.Rounded.AccountCircle" />
                </MudAvatar>
                <MudElement Class="mr-2 ml-2">@context.User.Identity.Name</MudElement>
                <MudLink Href="/logout" Class="pet-white" Color="Color.Inherit"><MudIcon Icon="@Icons.Filled.Logout"/></MudLink>
            </Authorized>
            <NotAuthorized>
                <MudLink Href="/login" Class="pet-white" Color="Color.Inherit"><MudIcon Icon="@Icons.Filled.Login" /></MudLink>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Style="height: 100vh;" Class="pet-grid-container">
        <AuthorizeView>
            <Authorized>
                <MudContainer Class="mt-6 pet-grid-container" MaxWidth="MaxWidth.ExtraLarge">
                    @Body
                </MudContainer>
            </Authorized>
            <NotAuthorized>
                <MudContainer Class="mt-6" MaxWidth="MaxWidth.Medium">
                    <Login></Login>
                </MudContainer>
            </NotAuthorized>
        </AuthorizeView>
    </MudMainContent>
</MudLayout>

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />



@code{
    private MudTheme _theme = new();
    private bool _isDarkMode;
    bool _drawerOpen = true;
    public string avatar;

    void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    protected override async Task OnInitializedAsync()
    {
        var jiraAvatar = await _jiraService.GetCurrentUserAvatarAsync();
        avatar = string.IsNullOrEmpty(jiraAvatar)
            ? string.Empty
            : jiraAvatar;
    }
}