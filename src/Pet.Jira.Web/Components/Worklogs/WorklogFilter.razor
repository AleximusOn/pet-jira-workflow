@using Pet.Jira.Domain.Models.Issues

<MudDateRangePicker Label="Date range" @bind-DateRange="_model.Filter.DateRange"/>
<MudTimePicker Label="Daily working start time" @bind-Time="_model.Filter.DailyWorkingStartTime" Editable="true" />
<MudTimePicker Label="Daily working end time" @bind-Time="_model.Filter.DailyWorkingEndTime" Editable="true" />
<MudAutocomplete T="IssueStatus" Label="In work issue status" @bind-Value="_model.Filter.IssueStatus"
                 SearchFunc="@SearchIssueStatuses" ToStringFunc="status => status?.Name" MaxItems="Int32.MaxValue"
                 ResetValueOnEmptyText="true" Dense="true"/>

<MudButton OnClick="Search" Variant="Variant.Filled" Color="Color.Primary" EndIcon="@Icons.Material.Filled.Send" Class="mt-2">Search</MudButton>

