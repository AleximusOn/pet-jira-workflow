@using Pet.Jira.Domain.Models.Issues

<MudDateRangePicker Label="Date range" @bind-DateRange="Model.Filter.DateRange"/>
<MudTimePicker Label="Daily working start time" @bind-Time="Model.Filter.DailyWorkingStartTime"/>
<MudTimePicker Label="Daily working end time" @bind-Time="Model.Filter.DailyWorkingEndTime"/>
<MudAutocomplete T="IssueStatus" Label="In work issue status" @bind-Value="Model.Filter.IssueStatus" 
                 SearchFunc="@SearchIssueStatuses" ToStringFunc="status => status?.Name" MaxItems="Int32.MaxValue"
                 ResetValueOnEmptyText="true" Dense="true"/>

<MudButton OnClick="Search" Variant="Variant.Filled" Color="Color.Primary" EndIcon="@Icons.Material.Filled.Send" Class="mt-2">Search</MudButton>

