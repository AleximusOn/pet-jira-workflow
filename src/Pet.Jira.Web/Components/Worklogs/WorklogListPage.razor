@page "/"
@page "/worklogs"

<MudOverlay Visible="@Model.InProgress" DarkBackground="true" Absolute="true">
    <MudProgressCircular Color="Color.Primary" Indeterminate="true"/>
</MudOverlay>

<MudPaper Class="d-flex flex-wrap gap-4 border-none" Outlined="true">
    <MudPaper Class="flex-none pa-4" Width="280px" Square="true" Outlined="true">
        <WorklogFilter OnSearchPressed="SearchAsync"></WorklogFilter>
    </MudPaper> 
    <MudPaper Class="flex-1 d-flex py-4" Outlined="true">
        <WorklogList Items="@Model.Items"></WorklogList>
    </MudPaper>
</MudPaper>

